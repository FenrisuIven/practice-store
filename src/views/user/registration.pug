extends ../layout/header.pug

block styles
  link(rel="stylesheet", href="/css/product-forms.css")

block content
  form.container.user-login.product-form(action="/register" method="POST")
    .user-login__input-field
      label(for="username") Username
      input#username(type="text" name="username")
    .user-login__input-field
      label(for="email") Email
      input#email(type="text" name="email")
    .user-login__input-field
      label(for="password") Password
      input#password(type="text" name="password")
    .user-login__input-field
      label(for="confirmPassword") Confirm password
      input#confirmPassword(type="text" name="confirmPassword")
    button.btn(type="submit") Login