extends ../layout/header.pug

block styles
  link(rel="stylesheet", href="/css/buttons.css")
  link(rel="stylesheet", href="/css/forms.css")

block content
  form.container.form(action="/login" method="POST")#login-form
    .form__input-field
      label(for="username") Username
      input#username(type="text" name="username")
    .form__input-field
      label(for="password") Password
      input#password(type="text" name="password")
    input(type="hidden" name="_csrf" id="_csrf" value=(csrfToken))
    button.button.outlined.login(type="submit")#login-btn
      span Login
    a.button.outlined.signup(href="/register")
      span Sign up

block scripts
  script(src="/scripts/validation/login.js" type="module")